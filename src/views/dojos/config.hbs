<div class="row">
    <div class="col-sm-12 col-md-3 bg-dark">
        
        <div class="card-body">
            {{> dojo/sidebar}}
        </div>
    </div>

    <div class="container mt-4">
        <h1 class="mb-4">
            <i class="fas fa-cog"></i> Configuración del Dojo
        </h1>

        <div class="card">
            <div class="card-body">
            <form action="/dojo/update" method="POST">
                <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                    <label>Nombre del Dojo *</label>
                    <input type="text" name="name" class="form-control" value="{{dojo.name}}" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                    <label>RIF *</label>
                    <input type="text" name="rif" class="form-control" value="{{dojo.rif}}" required>
                    </div>
                </div>
                </div>

                <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                    <label>Email de Contacto *</label>
                    <input type="email" name="contactEmail" class="form-control" value="{{dojo.contactEmail}}" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                    <label>Teléfono</label>
                    <input type="text" name="phone" class="form-control" value="{{dojo.phone}}">
                    </div>
                </div>
                </div>

                <div class="form-group">
                <label>Dirección</label>
                <input type="text" name="address" class="form-control" value="{{dojo.address}}">
                </div>

                <div class="form-group">
                <label>Artes Marciales *</label>
                <div class="row">
                    <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="arts" value="kendo" 
                        {{#if (includes dojo.arts 'kendo')}}checked{{/if}}>
                        <label class="form-check-label">Kendo</label>
                    </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="arts" value="iaido" 
                        {{#if (includes dojo.arts 'iaido')}}checked{{/if}}>
                        <label class="form-check-label">Iaido</label>
                    </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="arts" value="jodo" 
                        {{#if (includes dojo.arts 'jodo')}}checked{{/if}}>
                        <label class="form-check-label">Jodo</label>
                    </div>
                    </div>
                </div>
                </div>

                <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                    <label>Fecha de Fundación *</label>
                    <input type="date" name="foundationDate" class="form-control" 
                        value="{{formatDate dojo.foundationDate 'YYYY-MM-DD'}}" required>
                    </div>
                </div>
                </div>

                <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar Cambios
                </button>
            </form>
            </div>
        </div>
    </div>