<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">
        <i class="fas fa-school"></i> Registrar Nuevo Dojo
      </h2>
    </div>
    
    <div class="card-body">
      {{#each errors}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          {{text}}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{/each}}

      <form action="/FVK/DojoRegister" method="POST">
        <h4>Información del Dojo</h4>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="form-group">
              <label>Nombre del Dojo *</label>
              <input type="text" name="name" class="form-control" placeholder="Ej: Dojo Caracas" required>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>RIF *</label>
              <input type="text" name="rif" class="form-control" placeholder="J-00000000-0" required>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group">
              <label>Email de Contacto *</label>
              <input type="email" name="email" class="form-control" placeholder="contacto@dojo.com" required>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Teléfono</label>
              <input type="text" name="phone" class="form-control" placeholder="+58 412-0000000">
            </div>
          </div>
          
          <div class="col-md-12">
            <div class="form-group">
              <label>Dirección *</label>
              <input type="text" name="address" class="form-control" placeholder="Calle, ciudad, estado" required>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group">
              <label>Fecha de Fundación *</label>
              <input type="date" name="foundationDate" class="form-control" required>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group">
              <label>Artes Marciales *</label>
              <div class="d-flex">
                <div class="form-check mr-3">
                  <input class="form-check-input" type="checkbox" name="arts" value="kendo" id="kendoCheck" checked>
                  <label class="form-check-label" for="kendoCheck">Kendo</label>
                </div>
                <div class="form-check mr-3">
                  <input class="form-check-input" type="checkbox" name="arts" value="iaido" id="iaidoCheck">
                  <label class="form-check-label" for="iaidoCheck">Iaido</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="arts" value="jodo" id="jodoCheck">
                  <label class="form-check-label" for="jodoCheck">Jodo</label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <h4>Información del Responsable</h4>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="form-group">
              <label>Nombre Completo *</label>
              <input type="text" name="contactPerson.name" class="form-control" placeholder="Nombre y apellido" required>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Cédula de Identidad *</label>
              <input type="text" name="contactPerson.id" class="form-control" placeholder="00000000" required>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group">
              <label>Email Personal *</label>
              <input type="email" name="contactPerson.email" class="form-control" placeholder="responsable@email.com" required>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group">
              <label>Grado Máximo *</label>
              <select name="contactPerson.grade" class="form-control" required>
                <option value="1er dan">一段・1er dan</option>
                <option value="2do dan">二段・2do dan</option>
                <option value="3er dan">三段・3er dan</option>
                <option value="4to dan">四段・4to dan</option>
                <option value="5to dan">五段・5to dan</option>
                <option value="6to dan">六段・6to dan</option>
                <option value="7mo dan">七段・7mo dan</option>
                <option value="8vo dan" selected>八段・8vo dan</option>
              </select>
            </div>
          </div>
        </div>

        <h4>Credenciales de Acceso</h4>
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="form-group">
              <label>Contraseña *</label>
              <input type="password" name="password" class="form-control" required>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Confirmar Contraseña *</label>
              <input type="password" name="confirmPassword" class="form-control" required>
            </div>
          </div>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-paper-plane"></i> Enviar solicitud de ingreso
          </button>
          <p class="mt-3">
            ¿Su dojo ya está registrado? <a href="/">Ingrese aquí</a>
          </p>
        </div>
      </form>
    </div>
  </div>
</div>