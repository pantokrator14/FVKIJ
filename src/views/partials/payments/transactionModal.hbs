<div class="modal fade" id="transactionModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">
          {{#eq type 'ingresos'}}
            <i class="fas fa-download"></i> Nuevo Ingreso
          {{else}}
            <i class="fas fa-upload"></i> Nuevo Egreso
          {{/eq}}
        </h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/pagos" method="POST">
          <input type="hidden" name="type" value="{{type}}">
          
          {{#eq type 'egresos'}}
            <div class="form-group">
              <label>Destinatario</label>
              <select class="form-control" name="to" required>
                {{#if isAdmin}}
                  <option value="Federation">Federación Internacional de Kendo</option>
                {{else}}
                  <option value="Federation">Federación Venezolana de Kendo</option>
                  {{#each ../dojos}}
                    <option value="{{_id}}">{{name}}</option>
                  {{/each}}
                {{/if}}
              </select>
            </div>
          {{/eq}}

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Cantidad ($)</label>
                <input type="number" 
                       class="form-control" 
                       name="amount" 
                       min="1" 
                       step="0.01" 
                       required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Fecha</label>
                <input type="date" 
                       class="form-control" 
                       name="date" 
                       value="{{formatDate now 'YYYY-MM-DD'}}"
                       required>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label>Descripción</label>
            <textarea class="form-control" 
                      name="description" 
                      rows="3"
                      placeholder="Ej: Pago de cuota mensual"
                      required></textarea>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Cancelar
            </button>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save"></i> Guardar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>